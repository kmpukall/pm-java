<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="pm_rename_refactoring.actionSet">

		<menu label="Refactor" path="edit" id="org.eclipse.jdt.ui.refactoring.menu">
			<separator name="ProgramMetamorphosis" />
		</menu>
		
		<action
               label="PM Rename..."
               class="net.creichen.pm.actions.PMRenameAction"
               tooltip="Hello, Eclipse world"
               menubarPath="org.eclipse.jdt.ui.refactoring.menu/ProgramMetamorphosis"
               id="pm_rename_refactoring.actions.RenameAction">
         </action>
         
         <action
               label="PM Delegate..."
               class="net.creichen.pm.actions.PMDelegateAction"
               tooltip="Hello, Eclipse world"
               menubarPath="org.eclipse.jdt.ui.refactoring.menu/ProgramMetamorphosis"
               id="pm_rename_refactoring.actions.DelegateAction">
         </action>
         
         <action
               label="PM Cut"
               class="net.creichen.pm.actions.PMCutAction"
               tooltip="Hello, Eclipse world"
               menubarPath="org.eclipse.jdt.ui.refactoring.menu/ProgramMetamorphosis"
               id="pm_rename_refactoring.actions.CutAction">
         </action>
         
         <action
               label="PM Paste"
               class="net.creichen.pm.actions.PMPasteAction"
               tooltip="Hello, Eclipse world"
               menubarPath="org.eclipse.jdt.ui.refactoring.menu/ProgramMetamorphosis"
               id="pm_rename_refactoring.actions.PasteAction">
         </action>
         
          <action
               label="PM Split Temporary..."
               class="net.creichen.pm.actions.PMSplitAction"
               tooltip="Hello, Eclipse world"
               menubarPath="org.eclipse.jdt.ui.refactoring.menu/ProgramMetamorphosis"
               id="pm_rename_refactoring.actions.SplitTemporaryAction">
         </action>
         
         <action
               label="PM Time Parse"
               class="net.creichen.pm.actions.PMTimeParseAction"
               tooltip="Hello, Eclipse world"
               menubarPath="org.eclipse.jdt.ui.refactoring.menu/ProgramMetamorphosis"
               id="pm_rename_refactoring.actions.TimeParseAction">
         </action>
	  </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.ide.markerResolution">
      <markerResolutionGenerator
            class="net.creichen.pm.inconsistencies.PMMarkerResolutionGenerator"
            markerType="org.eclipse.core.resources.problemmarker">
      </markerResolutionGenerator>
   </extension>

</plugin>
